<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.senac.night_control.Consumo$PlaceholderFragment" >
    
    
    

     
       <TextView
    	         android:id="@+id/textView1"
    	         android:layout_width="wrap_content"
    	         android:layout_height="wrap_content"
    	         android:text="@string/title_consumo_add_bebida"
    	         android:textAppearance="?android:attr/textAppearanceMedium"
    	         android:textSize="30dp"
    	         android:layout_marginLeft="80dp" />

    <TextView
        android:id="@+id/id_lbl_limite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/imageView2"
        android:text="@string/gasto_maximo"
        android:textAppearance="?android:attr/textAppearanceSmall" />



    <TextView
        android:id="@+id/lblCoastMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_drinkSetValueS"
        android:layout_alignLeft="@+id/id_lbl_limite"
        android:text="0.00"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffb600"
        android:textSize="19dp"
         />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="20dp"
        android:text="@string/valor_bebida"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/et_drinkSetValueS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_toLeftOf="@+id/textView2"
        android:text="0.00"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffb600"
        android:textSize="19dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/linha" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="0.00"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="70dp" />

    <ImageButton
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/lblCoastMax"
        android:layout_below="@+id/textView2"
        android:src="@drawable/bt_cons"/>

</RelativeLayout>
